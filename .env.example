# Application Configuration
APP_NAME="BusTick"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://
APP_KEY=base64:your-secret-key-here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sinarjaya_db
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Mail Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@bustick.com
MAIL_FROM_NAME="BusTick"

# Payment Gateway Configuration
PAYMENT_MIDTRANS_SERVER_KEY=your-midtrans-server-key
PAYMENT_MIDTRANS_CLIENT_KEY=your-midtrans-client-key
PAYMENT_XENDIT_API_KEY=your-xendit-api-key

# SMS Gateway Configuration
